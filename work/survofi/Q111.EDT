0385|*TEXTS=T1,T2,T3
0386|*T1=[ROT(0)],rot(0);_horizontal,100,10
0387|*T2=[ROT(90)],rot(90);_90_vertical,30,70
0388|*T3=[ROT(45)],rot(45);_in_45_degrees,260,300
0389|*MODE=1000,1000 WSIZE=500,500 WHOME=WX-520,WY-560
